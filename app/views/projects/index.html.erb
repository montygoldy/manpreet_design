<% provide(:title, "Projects") %>
<!-- banner -->

<div id="banner">
	<h2 class="text-center"> MY PROJECTS</h2>
	<hr>
</div>


<!-- Projects --> 

<div class="container projects_overview">



	<div class="row">

		<ul>

           <% @projects.each do |project| %>
			<li>
				<div class="col-sm-6 col-md-offset-0 col-sm-offset-0 col-md-4 col-xs-8 col-xs-offset-2 home_project">
					<div class="overlay_tag">
					   <%= link_to project do %>
						<img src="images/1.jpg" alt="portfolio 1" class="img-responsive img-rounded">

							<!-- overlay -->

							<div class="overlay">
							</div>
							<div class="overlay_content">
								<h3 class="title text-center"><%= project.title %></h3>
								<hr>
								<h4 class="skills_used text-center"><%= project.skills %></h4>
							</div>
						<% end %>
					</div>
				</div>
			</li>
            <% end %>

			
		</ul>      
	</div> 
	<div class="editing_options">
		<% if user_signed_in? %>
		<ul>
			<li> <%= link_to new_project_path do %> <i class="fa fa-plus"></i> Add New Project <% end %></li>
			
			<% end %>  
		</div>  
</div>