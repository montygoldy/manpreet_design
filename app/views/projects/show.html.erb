<!-- banner -->

    <div id="banner">
        <h2 class="text-center"> MY PROJECTS</h2>
         <hr>
    </div>


     <!-- Projects --> 

       <div class="container projects_overview">
         

       
       <div class="row">
       <ul>

     
         <li>
            <div class="col-sm-6 col-md-offset-0 col-sm-offset-0 col-md-4 col-xs-8 col-xs-offset-2 home_project">
               <div class="overlay_tag">
                <a href="<%= @project.link %>" target="_blank">
                <%= image_tag @project.thumbnail.url(:medium), class: "img-responsive img-rounded" %>

                <!-- overlay -->
                 
                 <div class="overlay">
                 </div>
                    <div class="overlay_content">
                      <h3 class="title text-center"><%= @project.title %></h3>
                      <hr>
                      <h4 class="skills_used text-center"><%= @project.skills %></h4>
                   </div>
                </a>
                </div>
            </div>
         </li>
       </ul>     
    </div>   

    <%= link_to "Edit", edit_project_path(@project) %>
    <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure"} %>

</div>

