<% provide(:title, @project.title) %>

<!-- banner -->

<div id="banner">
	<h2 class="text-center"> <%= @project.title %></h2>
	<hr>
</div>



<!-- Projects --> 

<div class="container projects_overview">



	<div class="row">

		<div class="col-sm-6 col-md-offset-0 col-sm-offset-0 col-md-5 col-xs-8 col-xs-offset-2 home_project">
			<div class="overlay_tag">
				<a href="<%= @project.link %>" target="_blank">
					<%= image_tag @project.thumbnail.url(:medium), class: "img-responsive img-rounded" %>
				</a>
			</div>
		</div>

		<div class="col-sm-6 col-md-offset-0 col-sm-offset-0 col-md-7 col-xs-8 col-xs-offset-2 home_project">
		 
			<div class="col-sm-12 col-md-12 col-xs-12 description_project">
			   <h2 class="text-center">Description</h2>
			   <hr class="white_hr">
				<%= @project.description %>
			</div>
			


             <div class="col-sm-12 col-md-12 col-xs-12 skill_used_project">
               <h2 class="text-center">Skills Used</h2>
               <hr >
				<h3 class="text-center"><%= @project.skills %></h3>
			</div>
		

		
            <div class="col-sm-12 col-md-12 col-xs-12 checkout_button">
				<div class="button">
				<%= link_to "CHECK IT OUT NOW!!", @project.link, :target => "_blank" %>
				</div>
			</div>
		
		</div>


          <div class="editing_options">
         <% if user_signed_in? %>
            <ul>
           	<li> <%= link_to edit_project_path(@project) do %> <i class="fa fa-pencil-square-o"></i> Edit Project <% end %></li>
           	<li> <%= link_to project_path(@project), method: :delete, data: {confirm: "Are you sure"} do %><i class="fa fa-times"></i> Delete Project<% end %></li>
           </ul>
		    <% end %>  
		 </div>

	</div>   



</div>


<!-- Next Previous button -->


<div class="next_button">
  
  <%= link_to "Prev" ,@next_project if !@next_project.nil? %> 
	<i class="fa fa-angle-left"></i>
</div>

<div class="previous_button">
    <%= link_to "Next", @prev_project if !@prev_project.nil? %>
	<i class="fa fa-angle-right"></i>
</div>

