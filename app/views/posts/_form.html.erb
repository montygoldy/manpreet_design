<%= form_for @post do |f| %>
<% if @post.errors.any? %>
<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div class="col-md-12">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="col-md-12">
  <%= f.label :content, "Write your article here" %><br>
  <%= f.text_area :content %>
</div>

<div class="button">
 <%= f.submit  %>
</div>
<% end %>